<div class="container py-5 w-75">
  <h1 class="text-center">Alterar {{fieldName}}</h1>
  <form class="d-flex" style="flex-direction:column; gap:1rem;" action="/conta/alterar/{{field}}" method="POST">
    {{#if currentValue}}
      <div>
        <label class="form-label" for="current">{{fieldName}} atual:</label>
        <input class="form-control" id="current" readonly value="{{currentValue}} ">
      </div>
    {{/if}}
    <div>
      <label class="form-label" for="newValue">{{label}}</label>
      <input class="form-control" type="{{inputType}}" name="newValue" id="newValue" required>
    </div>
    <label class="form-label" for="password">Confirme a sua senha{{#if fieldIsPass}} atual{{/if}}:</label>
    <input class="form-control" type="password" name="password" id="password" required>
    <span id="message" class="text-danger">{{message}}</span>
    <div>
      <input class="btn btn-primary" type="submit" value="Alterar {{fieldName}} ">
    </div>
  </form>
</div>