<div class="container mt-5 mb-5">
  <div class="text-center mb-4">
    <h1>Parceiros</h1>
  </div>
  <div class="row g-3 my-5">
    {{#each providers}}
      <div class="col-12 col-md-8 p-4 bg-secondary-subtle mx-auto mb-4" style="max-width:540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/static/img/provider-{{id}}.jpeg" class="img-fluid rounded bg-secondary" width="150" height="150">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h4 class=" card-title">{{name}}</h4>
              <br>
              <div style="white-space: pre-line;">
                {{description}}
              </div>
              {{#if url}}
              <a href="{{url}}" class="btn btn-primary mt-4">Conhecer Parceiro</a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>