<div class="row justify-content-center">
  <div class="col-12 col-md-9 col-lg-6 p-4 bg-secondary-subtle">
    <h3 class="text-center">Alterar Senha</h3>
    <form class="d-flex" style="flex-direction: column; gap: 1rem" action="/resetar-senha" method="POST">
      <div>
        <label class="form-label" for="email">Por favor, insira seu email</label>
        <input class="form-control" name="email" id="email" required>
      </div>
      <div class="text-danger">
        {{message}}
      </div>
      <div>
        <input type="submit" class="btn btn-primary">
      </div>
    </form>
  </div>
</div>