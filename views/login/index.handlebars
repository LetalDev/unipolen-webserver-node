<div class="container bg-secondary-subtle p-5 my-5 w-75">
  <h1 class="text-center">Login</h1>
  <form class="d-flex" style="flex-direction: column; gap:1rem" action="/login" method="post">
    <div>
      <label class="form-label" for="email" class="bg-unp-red-1">Email</label>
      <input class="form-control" type="email" id="email" name="email" required>
    </div>
    <div>
      <label class="form-label" for="password" class="bg-unp-red-1">Senha</label>
      <input class="form-control" type="password" id="password" name="password" required>
    </div>
    <div>
      <input class="btn btn-primary btn-lg" type="submit" value="Entrar">
    </div>
    <span class="text-danger">{{message}}</span>
  </form>
